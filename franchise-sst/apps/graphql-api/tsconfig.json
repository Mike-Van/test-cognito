{
	"compilerOptions": {
		"composite": false,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"inlineSources": false,
		"isolatedModules": true,
		"lib": ["ES2021", "DOM", "DOM.Iterable"],
		"moduleResolution": "node",
		"preserveWatchOutput": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"allowJs": true,
		"checkJs": false,

		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": false,
		"noImplicitAny": false,

		"strict": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"alwaysStrict": true,

		"target": "es6",
		"module": "commonjs",
		"sourceMap": true,

		"incremental": false,
		"rootDir": ".",
		"baseUrl": "./",
		"noEmit": true,
		"paths": {
			"~/*": ["src/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", ".turbo", "dist"]
}
